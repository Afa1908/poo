public class DigaSeuNome {

    public static void main(String[] args) {

        Scanner ler = new Scanner(System.in);

        String nome;
        System.out.printf("Diga seu nome: ");
        nome = ler.nextLine();
        System.out.printf("Ol√°, " + nome);
        }

}


